<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<Scene fx:controller="pl.dobblepolskab.gui.MainMenuController" fx:id="scene"
       xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" width="800" height="600">
    <VBox alignment="TOP_CENTER" prefHeight="800" prefWidth="600" spacing="100">
        <ImageView fx:id="logo" pickOnBounds="true" preserveRatio="true">
            <Image url="@../../../images/logo.png" />
            <VBox.margin>
                <Insets top="20.0" />
            </VBox.margin>
        </ImageView>
        <VBox alignment="CENTER" spacing="10">
            <Button fx:id="singleplayer" mnemonicParsing="false" onMouseClicked="#startSingleplayer" text="Singleplayer"/>
            <Button fx:id="multiplayer" mnemonicParsing="false" text="Multiplayer"/>
            <Button fx:id="leaderboards" mnemonicParsing="false" onMouseClicked="#showLeaderboards" text="Leaderboards"/>
            <Button fx:id="settings" mnemonicParsing="false" text="Settings"/>
            <Button fx:id="exit" mnemonicParsing="false" text="Exit"/>
        </VBox>
    </VBox>
</Scene>
